{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "es2022": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "standard",
    "prettier",
    "unused-imports"
  ],
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    // "no-unused-vars": "off", // or "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    // "unused-imports/no-unused-vars": [
    // 	"warn",
    // 	{ "vars": "all", "varsIgnorePattern": "^_", "args": "after-used", "argsIgnorePattern": "^_" }
    // ],
    "newline-per-chained-call": 1,
    "strict": [
      "error",
      "global"
    ],
    "no-var": "error",
    "curly": "off",
    "semi": [
      "error"
    ],
    "no-tabs": [
      "off",
      "always"
    ],
    "new-cap": "off",
    "require-jsdoc": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "variables": false
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "time",
          "timeEnd"
        ]
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "max-len": [
      "error",
      {
        "code": 125,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignorePattern": "^\\s*var\\s.+=\\s*require\\s*\\("
      }
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "complexity": [
      "warn",
      6
    ],
    "import/no-extraneous-dependencies": 0,
    "require-atomic-updates": 0
  }
}